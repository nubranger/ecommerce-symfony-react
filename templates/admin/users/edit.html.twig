{% extends 'admin/index.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-white">Edit User</h1>
        <form
                action="{{ path('admin_users_update', {id:user.id}) }}"
                method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">

                    <label for="user_name" class="form-label">Name</label>
                    <input class="form-control" type="text" name="user_name" id="user_name"
                           value="{{ user.name }}">
                    <label for="user_surname" class="form-label">Surname</label>
                    <input class="form-control" type="text" name="user_surname" id="user_surname"
                           value="{{ user.surname }}">
                    <label for="user_email" class="form-label">E-mail</label>
                    <input class="form-control" type="text" name="user_email" id="user_email"
                           value="{{ user.email }}">
                    <label for="user_roles" class="form-label">Roles</label>
                    <select class="form-select" name="user_roles" aria-label="User roles">
                        <option {% if user.roles|first == "ROLE_ADMIN" %} selected {% endif %} value="ROLE_ADMIN">Admin</option>
                        <option {% if user.roles|first == "ROLE_REGISTERED" %} selected {% endif %} value="ROLE_REGISTERED">Registered
                        </option>
                    </select>

                    <div class="mt-2">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            Change password
                        </button>
                    </div>
                    <div class="collapse mt-2" id="collapseExample">
                        <label for="user_password" class="form-label">Password</label>
                        <input class="form-control" type="password" name="user_password" id="user_password">
                        <label for="user_password_repeat" class="form-label">Repeat password</label>
                        <input class="form-control" type="password" name="user_password_repeat" id="user_password_repeat">
                    </div>

                </div>
                 <div class="col-md-6 mt-2">
                 {% include 'validations/validation.html.twig' %}
                 </div>
            </div>

            <div class="row mt-2">
                <div class="col-12">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-outline-success me-2">Save</button>
                        <a class="btn btn-outline-secondary me-2" href="{{ path('admin_users') }}">Back</a>
                    </div>
                </div>
            </div>
            <input type="hidden" name="token" value="{{ csrf_token('') }}"/>
        </form>
    </div>

{% endblock %}